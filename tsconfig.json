{
    "compilerOptions": {
        "module": "system",
        "target": "es5",
        "noImplicitAny": true,
        "removeComments": true,
        "preserveConstEnums": true,
        "sourceMap": false,
        "moduleResolution": "node",
        "lib": ["es6", "dom"],
        "outFile": "dist/scripts/server/app.js"
    },
    "include": [
        "src/scripts/server/**/*.ts",
        "src/scripts/modules/**/*.ts"
    ],
    "exclude": [
        "node_modules",
        "dist"
    ]
}